{
	"compilerOptions": {
		"rootDirs": ["src"],
		"outDir": "dist",
		"lib": ["es2020"],
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"removeComments": true,
		"types": ["node"]
	},
	"exclude": ["node_modules", "dist"],
  "include": ["src"]
}
